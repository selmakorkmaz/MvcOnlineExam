@model OnlineExamSystem.Models.SessionModel

<div class="jumbotron">
    <h1><span style="color:darkorange;"><i>Online</i></span> Exam System</h1>
</div>
<br />

@if (TempData["tempMessage"] != null)
{
    <div class="row">
        <div class=" alert-danger col-md-10">
            <p>
                @Html.Raw(@TempData["tempMessage"])
            </p>
        </div>
    </div>
}
<br /><br />

@using (Html.BeginForm("Instruction", "Home", FormMethod.Post))
{
    <div class="container">
        <div class="row form-horizontal">
            <div class="form-group">

                <div class="col-md-3">@Html.Label("Select Test")</div>
                <div class="col-md-5">
                    @Html.DropDownListFor(x => x.TestId, new SelectList(ViewBag.Tests, "Id", "Name", Model.TestId), "-- Select Test --", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">@Html.Label("Name")</div>
                <div class="col-md-5">@Html.TextBoxFor(x => x.UserName, Model.UserName, new { @class = "form-control" })</div>
            </div>

            <div class="form-group">
                <div class="col-md-3">@Html.Label("Email")</div>
                <div class="col-md-5">@Html.TextBoxFor(x => x.Email, Model.Email, new { @class = "form-control" })</div>
            </div>

            <div class="form-group">
                <div class="col-md-3">@Html.Label("Phone")</div>
                <div class="col-md-5">@Html.TextBoxFor(x => x.Phone, Model.Phone, new { @class = "form-control" })</div>
            </div>

            <div class="form-group">
                <div class="col-md-3"></div>
                <div class="col-md-5">
                    <button type="submit" class="btn btn-primary">Continue</button>
                </div>
            </div>
        </div>
    </div>


}

